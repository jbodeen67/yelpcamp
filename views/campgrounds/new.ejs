<% include ../partials/header %>
    <div class="row">
        <h1 class="text-center">Add A New Campground</h1>
        <div class="form-wrap">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name of Campground"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="URL of Campround Image"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Campground Fee" min="0.01" step="0.01"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description of campground"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" placeholder="Camp Location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Campground</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>